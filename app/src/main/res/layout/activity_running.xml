<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zmychou.paces.running.RunningActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <TextView
        android:id="@+id/btn_running_activity_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_below="@id/map"
        android:text="0.00"/>
    <TextView
        android:id="@+id/btn_running_activity_distance_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_running_activity_distance"
        android:text="Total distance:KM"/>
    <TextView
        android:id="@+id/btn_running_activity_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/btn_running_activity_distance_desc"
        android:text="00:00:00"/>
    <Button
        android:id="@+id/btn_running_activity_main"
        android:background="@drawable/btn_green_roundness"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/running_activity_bottom_holder"
        android:text="start"/>
    <Button
        android:id="@+id/btn_running_activity_slave"
        android:background="@drawable/btn_red_roundness"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/btn_running_activity_main"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="stop"/>

    <TextView
        android:id="@+id/running_activity_bottom_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:text="holder"/>

</RelativeLayout>
