<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_running_record_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="2017/2/14"
        android:layout_marginTop="12dp" />
    <TextView
        android:id="@+id/tv_running_record_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_running_record_date"
        android:text="12.03"
        android:textSize="25sp"
        android:layout_marginTop="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-45dp"
        android:layout_alignRight="@id/tv_running_record_distance"
        android:layout_below="@id/tv_running_record_date"
        android:text="km"
        android:textSize="25sp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/tv_running_record_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_running_record_distance"
        android:layout_marginRight="-145dp"
        android:layout_alignRight="@id/tv_running_record_distance"
        android:text="0:00:00"
        android:textSize="20sp"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/forward"
        android:id="@+id/imageView" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_record_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>