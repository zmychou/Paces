<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zmychou.paces.fragments.MorePageFragment">

    <ImageView
        android:id="@+id/iv_fragment_more_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <com.zmychou.paces.customview.MoreItemView
        android:id="@+id/miv_fragment_more_music"
        android:layout_below="@id/iv_fragment_more_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorGrayDark"
        myns:src="@drawable/music"
        myns:text="音乐"
        />

    <com.zmychou.paces.customview.MoreItemView
        android:background="@color/colorGrayDark"
        android:id="@+id/miv_fragment_more_pedestrian"
        android:layout_below="@id/miv_fragment_more_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        myns:src="@drawable/pedestrian"
        myns:text="计步"
        />

    <com.zmychou.paces.customview.MoreItemView
        android:background="@color/colorGrayDark"
        android:id="@+id/miv_fragment_more_article"
        android:layout_below="@id/miv_fragment_more_pedestrian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        myns:src="@drawable/news"
        myns:text="文章"
        />

    <com.zmychou.paces.customview.MoreItemView
        android:background="@color/colorGrayDark"
        android:id="@+id/miv_fragment_more_chat"
        android:layout_below="@id/miv_fragment_more_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        myns:src="@drawable/send"
        myns:text="沟通"
        />

</RelativeLayout>
