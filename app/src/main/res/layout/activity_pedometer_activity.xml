<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pedometer.PedometerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_activity_pedometer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        toolbar:navigationIcon="@mipmap/left"
        toolbar:title="@string/pedometer_activity_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedometer_activity_today"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="25sp"
        android:id="@+id/tv_pedometer_activity_date"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tb_activity_pedometer_toolbar"
        />

    <com.zmychou.paces.customview.StepCountView
        android:layout_below="@id/tv_pedometer_activity_date"
        android:id="@+id/tv_pedestrian_steps"
        android:layout_width="match_parent"
        android:text="0"
        android:layout_height="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedometer_activity_has_walk"
        android:layout_alignTop="@id/tv_pedestrian_steps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:textColor="@color/colorOrangeLight"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedometer_activity_daily_target"
        android:layout_alignBottom="@id/tv_pedestrian_steps"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:textColor="@color/colorOrangeLight"
        />
</RelativeLayout>
