<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zmychou.paces.login.LoginActivity">

    <android.support.v7.widget.Toolbar
        app:navigationIcon="@mipmap/left"
        app:title="@string/signup_activity_title"
        android:id="@+id/tb_signup_activity_toolbar"
        android:background="@color/colorGrayDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/tb_signup_activity_toolbar"
        android:background="@drawable/input_marquee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="50dp"
        android:id="@+id/et_signup_username"
        android:layout_marginTop="20dp"
        android:hint="@string/signup_hint_username"

        android:maxLines="1"
        android:layout_width="match_parent"
        />
    <EditText
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_marquee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="50dp"
        android:hint="@string/signup_hint_password"
        android:id="@+id/et_signup_password"

        android:maxLines="1"
        android:layout_below="@id/et_signup_username"
        android:layout_width="match_parent"
        />
    <EditText
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/input_marquee"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="50dp"
        android:hint="@string/signup_hint_password_check"
        android:id="@+id/et_signup_password_check"
        android:layout_below="@id/et_signup_password"
        android:maxLines="1"
        android:layout_width="match_parent"
        />

    <Button
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/btn_signup"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_common"
        android:text="@string/login_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        />
    <CheckBox
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/cb_signup_agreement"
        android:layout_below="@id/et_signup_password_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/user_agreement"/>
</RelativeLayout>
